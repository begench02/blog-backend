{
    "compilerOptions": {
        "target": "es2016",
        "module": "node16",
        "moduleResolution": "node16",
        "rootDir": ".",
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "baseUrl": "src",
        "paths": {
            "@controllers/*": ["controllers/*"],
            "@models/*": ["models/*"],
            "@routes/*": ["routes/*"],
            "@middleware/*": ["middleware/*"]
        }
    }
}
